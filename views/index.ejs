        }

        .hero-section {
            height: 100vh;
            width: 100%;
            background-color: white;
            margin: 50px 0;
        }

        .hero-container {
            display: flex;
            max-width: 1200px;
            height: fit-content;
            justify-content: center;
            align-items: center;
            gap: 20px;
            margin: 0 auto;
            padding: 20px;
        }

        .hero-content {
            width: 50%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: start;
            padding-bottom: 50px;
            flex-basis: 50%;
        }

        .wrapper {
            width: 100%;
            max-width: 500px;
            margin-top: 40px;
        }

        .searchBar {
            width: 100%;
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        #searchQueryInput {
            width: 100%;
            height: 2.8rem;
            background: white;
            outline: none;
            border-radius: 1.625rem;
            border: 2px solid #57cc99;
            padding: 0 3.5rem 0 1.5rem;
            font-size: 1rem;
        }

        #searchQuerySubmit {
            width: 3.5rem;
            height: 2.8rem;
            margin-left: -3rem;
            background: none;
            border: none;
            outline: none;
        }

        .searchLink {
            width: fit-content;
            height: fit-content;
            text-decoration: none;
        }

        #searchQuerySubmit:hover {
            cursor: pointer;
        }

        @media screen and (max-width: 900px) {
            .hero-container {
                flex-direction: column;
                gap: 0;
            }

            .hero-content {
                width: 100%;
                padding-bottom: 0;
                display: flex;
                flex-direction: column;
            }
        }
    </style>